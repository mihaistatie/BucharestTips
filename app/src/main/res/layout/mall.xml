<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/imagine_mall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        >

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/contact_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#0000"
            android:maxWidth="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/contact">

        </ImageButton>



        <ImageButton
            android:id="@+id/site_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#0000"
            android:maxWidth="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/site"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp">

        </ImageButton>

        <ImageButton
            android:id="@+id/location_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#0000"
            android:maxWidth="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/location"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp">

        </ImageButton>

        <ImageButton
            android:id="@+id/trip_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:adjustViewBounds="true"
            android:background="#0000"
            android:maxWidth="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/tripadvisor">

        </ImageButton>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AFI Palace "
            android:textColor="#000"
            android:textSize="25sp"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:layout_marginLeft="15dp">

        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AFI Palace Cotroceni is a shopping mall located in Bucharest. It's the largest mall in Romania, so take your time and enjoy your shopping. "
            android:textSize="25sp"
            android:fontFamily="@font/lato"
            android:textStyle="normal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:lineSpacingExtra="3dp">


        </TextView>

    </LinearLayout>


</LinearLayout>